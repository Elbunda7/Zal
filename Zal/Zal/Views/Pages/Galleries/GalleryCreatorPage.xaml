<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zal.Views.Pages.Galleries.GalleryCreatorPage">
    <ContentPage.Content>

        <StackLayout VerticalOptions="Fill">

            <StackLayout 
                BackgroundColor="{StaticResource Primary}"
                Padding="20,10"
                VerticalOptions="FillAndExpand">

                <Frame 
                    x:Name="Frm_Settings"
                    Padding="10" 
                    CornerRadius="10" 
                    BackgroundColor="WhiteSmoke">
                    <StackLayout Padding="10,5" Spacing="0" HorizontalOptions="FillAndExpand">

                        <StackLayout 
                            Orientation="Horizontal" 
                            HorizontalOptions="CenterAndExpand">
                            <Label Text="Název:"
                                VerticalOptions="Center" 
                                HorizontalOptions="Center" />
                            <Entry 
                                x:Name="Ent_Name"
                                WidthRequest="150"
                                HorizontalOptions="CenterAndExpand"/>
                        </StackLayout>

                        <StackLayout 
                            Orientation="Horizontal" 
                            HorizontalOptions="CenterAndExpand">
                            <Label Text="Rok:"
                                VerticalOptions="Center" 
                                HorizontalOptions="Center" />
                            <Entry 
                                x:Name="Ent_Year"
                                WidthRequest="50"
                                Keyboard="Numeric"
                                MaxLength="4"
                                HorizontalOptions="CenterAndExpand"/>
                        </StackLayout>

                        <Button
                            x:Name="Btn_SaveGallery"
                            BackgroundColor="{StaticResource Accent}"
                            HorizontalOptions="Center"
                            WidthRequest="100"
                            Text="Uložit"
                            Clicked="SaveGallery_Click"/>

                    </StackLayout>
                </Frame>

                <Button
                    x:Name="Btn_PickPhotos"
                    Margin="10" 
                    BackgroundColor="{StaticResource Accent}"
                    HorizontalOptions="Center"
                    WidthRequest="140"
                    Text="Nahrát fotky"
                    Clicked="PickPhotos_Click"/>

